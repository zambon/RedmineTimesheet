<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'calendar.css', :plugin => 'redmine_timesheet' %>
    <%= stylesheet_link_tag 'timesheets.css', :plugin => 'redmine_timesheet' %>
	<%= javascript_include_tag 'timesheets.js', :plugin => 'redmine_timesheet' %>
<% end %>

<div class="contextual icon" style="background: url(../plugin_assets/redmine_timesheet/images/add.png) no-repeat 0 40%;">
	<%= link_to 'Reports', {:controller => 'report', :action => 'index'} %>
</div>

<h2>
	<%= @username %>'s Timesheet
</h2>

<div id="timesheets_parent"></div>
<br />
<%= render :partial => 'calendar' %>

<div id="tip" class="tooltip" style="display: none; position: absolute;"></div>
